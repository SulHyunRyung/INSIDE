package gui;

import model.Member;
import javax.swing.*;
import java.awt.*;

public class BoardFrame extends JFrame {
    private static final long serialVersionUID = 1L;

    public BoardFrame(String userName) {
        setTitle("게시판");
        setSize(600, 400);
        setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
        setLocationRelativeTo(null);
        setLayout(new BorderLayout());

        // 제목 패널
        JPanel titlePanel = new JPanel();
        JLabel titleLabel = new JLabel("게시판");
        
        // 폰트 설정
        titleLabel.setFont(new Font("Arial", Font.BOLD, 24)); // 원하는 폰트 설정
        titleLabel.setHorizontalAlignment(SwingConstants.CENTER);
        
        titlePanel.add(titleLabel);
        add(titlePanel, BorderLayout.NORTH);

        // 게시글 패널
        JPanel postPanel = new JPanel();
        postPanel.setLayout(new GridLayout(0, 1));
        
        for (int i = 1; i <= 5; i++) {
            postPanel.add(new JLabel("게시글 " + i + " [P_USER_ID] [POST_TITLE] [CREATE_DATE]"));
        }
        
        JScrollPane scrollPane = new JScrollPane(postPanel);
        add(scrollPane, BorderLayout.CENTER);

        // 버튼 패널
        JPanel buttonPanel = new JPanel();
        buttonPanel.setLayout(new FlowLayout());

        JButton writeButton = new JButton("게시글 작성");
        JButton editButton = new JButton("게시글 수정");
        JButton deleteButton = new JButton("게시글 삭제");

        buttonPanel.add(writeButton);
        buttonPanel.add(editButton);
        buttonPanel.add(deleteButton);

        add(buttonPanel, BorderLayout.SOUTH);
        
        setVisible(true);
    }
}
